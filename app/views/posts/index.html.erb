<h1>Posts</h1>

<% @posts.each do |p| %>
    <div>
        <% if user_signed_in? %>
            <p><%= @users.find(p.user_id).username %></p>
        <% end %>
        <p><%= p.title %></p>
        <p><%= p.body %></p>
        <p>---------------------------------------------------</p>
    </div>
<% end %>